{% extends 'baseelements/themebase.html.twig' %}

{% block pagebody %}
    <h1>Login</h1>

	<form action="{{ path('login') }}" method="post">
    <table cellspacing="5" cellpadding="5">
        <tbody>
        	{% if error %}
            <tr>
                <td colspan="2">{{ error.messageKey|trans(error.messageData, 'security') }}</td>
            </tr>
            {% endif %}
            <tr>
                <td><label for="username">Username:</label></td>
                <td><input type="text" id="username" name="_username" value="{{ last_username }}" /></td>
            </tr>
            <tr>
                <td><label for="password">Password:</label></td>
                <td><input type="password" id="password" name="_password" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
            	    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}
                
                    <button type="submit">login</button>
				</td>
            </tr>
        </tbody>
    </table>
    </form>
{% endblock pagebody %}